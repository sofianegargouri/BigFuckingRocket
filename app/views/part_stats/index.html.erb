<p id="notice"><%= notice %></p>

<h1>Part Stats</h1>

<table>
  <thead>
    <tr>
      <th>Ratio</th>
      <th>Stat</th>
      <th>Part</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @part_stats.each do |part_stat| %>
      <tr>
        <td><%= part_stat.ratio %></td>
        <td><%= part_stat.stat %></td>
        <td><%= part_stat.part %></td>
        <td><%= link_to 'Show', part_stat %></td>
        <td><%= link_to 'Edit', edit_part_stat_path(part_stat) %></td>
        <td><%= link_to 'Destroy', part_stat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Part Stat', new_part_stat_path %>
