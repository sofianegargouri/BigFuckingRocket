<p id="notice"><%= notice %></p>

<h1>Rockets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rockets.each do |rocket| %>
      <tr>
        <td><%= rocket.name %></td>
        <td><%= rocket.image_url %></td>
        <td><%= link_to 'Show', rocket %></td>
        <td><%= link_to 'Edit', edit_rocket_path(rocket) %></td>
        <td><%= link_to 'Destroy', rocket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rocket', new_rocket_path %>
